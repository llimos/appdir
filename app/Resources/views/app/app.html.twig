{% extends 'base.html.twig' %}
{% set activeMenu = 'app' %}
{% block title %}{{app.name}} :: {{parent()}}{% endblock %}

{% block javascripts %}
{{parent()}}

<script type="text/javascript">
    var app = {{ app|json_encode|raw }};
</script>

<script type="text/babel">
    ReactDOM.render(<PageHeader title={app.name} label={app.type} button={function(){}} subtitle={app.info}/>, document.getElementById('page-header'));
    ReactDOM.render(<AppInfo app={app}/>, document.getElementById('page-content'));
</script>

{% endblock %}